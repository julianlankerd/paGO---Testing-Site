	<description>PLG_PAGO_GATEWAY_BANKTRANSFER_XML_DESCRIPTION</description>
	<files>
		<filename plugin="banktransfer">banktransfer.php</filename>
		<filename plugin="banktransfer">banktransfer.png</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_pago_gateway_banktransfer.ini</language>
